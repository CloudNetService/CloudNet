{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "t: dependencies"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions"
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/KyoriPowered/adventure"
      ],
      "groupName": "adventure monorepo"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "excludePackageNames": [
        "gradle"
      ],
      "groupName": "all dependencies with patch changes"
    },
    {
      "description": "Correct Guava version handling",
      "matchPackagePrefixes": [
        "com.google.guava:"
      ],
      "versioning": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?(-(?<compatibility>.*))?$"
    },
    {
      "description": "Disabled until sponge updates to v9",
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackagePrefixes": [
        "cpw.mods:"
      ],
      "enabled": false
    },
    {
      "description": "Disabled until netty5 stable release",
      "matchPackagePrefixes": [
        "io.netty:"
      ],
      "enabled": false
    },
    {
      "description": "Disabled because we support sponge >=8",
      "matchPackagePrefixes": [
        "org.spongepowered"
      ],
      "enabled": false
    },
    {
      "description": "Disabled because renovate does not understand minestom versioning",
      "matchPackagePrefixes": [
        "net.minestom:"
      ],
      "enabled": false
    },
    {
      "description": "Disabled because we cannot support waterdog v2 for now",
      "matchPackagePrefixes": [
        "dev.waterdog.waterdogpe:"
      ],
      "enabled": false
    },
    {
      "description": "Disabled because we don't want to pin our versions",
      "matchPackagePrefixes": [
        "azul/zulu-openjdk:"
      ],
      "enabled": false
    },
    {
      "description": "Breaks old databases so we don't need updates",
      "matchPackagePrefixes": [
        "com.h2database:"
      ],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "addLabels": [
      "t: security"
    ],
    "assignees": [
      "@derklaro"
    ]
  },
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 6:00am"
  ],
  "prHourlyLimit": 10,
  "rebaseLabel": "s: rebase",
  "stopUpdatingLabel": "s: stop updates",
  "commitMessagePrefix": "chore: ",
  "commitMessageAction": "update"
}
